@import url('https://fonts.googleapis.com/css?family=Lato');

html {
  background: url(<%= asset_path 'bg_pattern.png' %>) repeat;
}

body {
  font-family: 'Lato', sans-serif;
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}

header, section, footer {
  display: block;
  width: 500px;
  margin: 10px;
  color: palevioletred;
  background-color: white;
}

header, footer, h2 {
  text-align: center;
}

li {
  list-style: none;
  padding: 0em .5em .5em .5em;
}

li strong {
  font-size: 1.5em;
  display: block;
  width: 500px;
}

ul { 
  display: flex;
  flex-flow: row wrap;
  width: 100%;
}

a[href] {
  text-decoration: none;
  color: palevioletred;
}

a[href]:hover {
  color: burlywood;
  text-decoration: underline;
  text-decoration-color: palevioletred;
}

.completed {
  text-decoration: line-through;
}
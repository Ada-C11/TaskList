<h1 class="logo">Task List</h1>

<div class="list">

  <ol>
  <% @tasks.each do |task| %>
    <li class= "list-item">
    <h3>Task Type:  <%= link_to task.name, task_path(task.id) %>  </h3> 

     <% if task.completed? %>
        <p> 
          <strike> Completion Date:   <%= task.completion_date %> </strike>
        </p>

        <p class="complete"> <%= link_to "Mark Incomplete", complete_task_path(task.id), method: :patch %> </p>

     <% else %> 
         Completion Date: <%= task.completion_date %> 

         <p class="complete"> <%= link_to "Mark Completed", complete_task_path(task.id), method: :patch %> </p>

     <% end %>

    <p> <%= link_to "Edit", edit_task_path(task.id)%> </p>

    <p> <%= link_to "Delete", task_path(task.id), method: :delete %> </p>

    </li>
  <% end %>
  
  <h4 class="new-task"> <%= link_to "Create a new Task", new_task_path %> </h4>
  </ol>
 
</div>
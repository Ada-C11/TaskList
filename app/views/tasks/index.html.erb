<h2>Your Tasks</h2>
<ul>
<% @tasks.each do |task| %>  
  <li>
    <a href="/tasks/<%= task.id %>" >
    <%= task.name %>
    </a>
    <br>
    <%= link_to "Delete Task", task_path(task.id), method: :delete %>
    <%= link_to "Edit Task", edit_task_path(task.id) %>
    <% if task.completed == false %>
      <%= link_to "Mark Complete", mark_complete_url(task.id), method: :patch %>
    <% else %>
      <%= link_to "Unmark Complete", mark_complete_url(task.id), method: :patch %>
    <% end %>
  </li>
<% end %>
</ul>




<h1>Hello, this is my task list</h1>

<p>There are <%= @tasks.length %> tasks to do.</p>


<ul>
<% @tasks.each do |task|%>
<li>
<%= task.name %> : <%= task.description %> , <%= task.completion_date%>
          <%= link_to "Edit", edit_task_path(task.id) %>
          <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "are you sure you want to delete this task?"} %>
          
</li>
<% end %>
</ul>
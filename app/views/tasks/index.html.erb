<h1>Task List</h1>

<ul>
<% @tasks.each do |task| %>
    <li>
        
        <% if !task.completed %>
            <section class="false-status"><%= link_to task.name, task_path(task.id), class: "link" %></section>
            <section class="false-status">Description: <%= task.description %></section>
            <%= button_to "Mark complete", { action: "toggle_complete", id: task.id }, method: :patch %>
        <% else %>
            <section class="true-status"><%= link_to task.name, task_path(task.id), class: "link" %></section>
            <section class="true-status">Description: <%= task.description %></section>
            <%= button_to "Unmark complete", { action: "toggle_complete", id: task.id }, method: :patch %>
        <% end %>
        
        <%= link_to "Edit", edit_task_path(task.id), class: "link" %>
        <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}, class: "link" %>
    </li>
<% end %>
</ul>

<%= link_to "Add a new task", new_task_path, class: "link" %>
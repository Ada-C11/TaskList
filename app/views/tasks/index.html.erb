<ul>
<% @tasks.each do |task| %>
  <li>
    <%= link_to task.name, task_path(task.id) %>
    <% if !task.completed %>
      <%= button_to "Mark complete", { action: "mark_complete", id: task.id }, method: :patch %>
    <% else %>
      <%= button_to "Unmark complete", { action: "mark_complete", id: task.id }, method: :patch %>
    <% end %>
  </li>
<% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
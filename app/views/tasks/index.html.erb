
<ul class="list-group d-flex justify-content-between">
<header><h1> Tasktron 6000 </h1>
<p><%= link_to "New Task", new_task_path %></p>
</header>
    <% @tasks.each do |task| %>
    <li class="list-group-item flex-column align-items-start"><%= link_to task.title, task_path(task.id) %>
    <div class="btn-group btn-group float-right" role="group">
    <button type="button" class="btn-primary"><%= link_to "Edit", edit_task_path(task[:id]) %></button>
    <button type="button" class="btn-primary"><%= link_to "Delete", task, method: :delete, data: { confirm: "Really, though? This can't be undone." }%></button></div>
    </li>
<% end %></ul>
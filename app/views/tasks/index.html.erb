
<h1>Hello, this is my task list</h1>

<p>There are <%= @tasks.length %> tasks to do.</p>


<ul>
<% @tasks.each do |task|%>
<li>
<%= link_to task.name, task_path(task) %> : <%= task.description %> , <%= task.completion_date%>
          <%= link_to "Edit", edit_task_path(task.id) %>
          <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "are you sure you want to delete this task?"} %>
          <%= link_to "Mark complete", tasks_path, class: 'button' %>
</li>
<% end %>
</ul>
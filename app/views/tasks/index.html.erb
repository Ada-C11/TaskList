


<h2>
    Remember to:
</h2>
<ul  class="index-tasks">
    <% @tasks.each do |task| %>
    <li>
        <%= link_to task.name, task_path(task), class: "task-name" %>
        <%= link_to "Edit", edit_task_path(task) %>
        <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
</ul>
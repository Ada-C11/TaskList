<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <% if task.completed %>
        <p><strong><strike><%= link_to task.name, task_path(task) %></strike></strong></p>
        <p><%= link_to "Unmark Complete", complete_task_path(task), method: :post %></p>
      <% else %>
        <p><strong><%= link_to task.name, task_path(task) %></strong></p>
        <p><%= link_to "Mark Complete", complete_task_path(task), method: :post %></p>
      <% end %>
      <p>Description: <%= task.description %></p>
      <% if task.completion_date %>
        <p>Due date: <%= task.completion_date %></p>
      <% end %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you'd like to delete this task?" }%>
    </li>
  <% end %>
</ul>
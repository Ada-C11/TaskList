<h2> Tasks </h2>

<ul class="task-list">
    <% @tasks.each do |task| %>
       <li>
        <strong><%= link_to task.title.upcase, task_path(task) %>: <%= task.content%> </strong>
        </li>
        <%if task.completed == false %>
          <%= link_to task.title, task_path(task) %>
          <%= link_to "Mark Complete", { action: "completed", id: task.id }, method: :patch %> 
        <%else%>
          <strike><%= link_to task.title, task_path(task) %></strike>
          <%= link_to "Unmark Complete", { action: "completed", id: task.id }, method: :patch%> 
        <%end%>
         <%= link_to "Delete Task", task_path(task), method: :delete, data: { confirm: "Do you want to delete this task?" } %>
        <%= link_to "Edit Task", edit_task_path(task) %>
        <% end %>
</ul>   






       
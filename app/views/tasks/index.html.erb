<h1>TaskList App</h1>
<%= link_to "Home", tasks_path %>
<h2>Tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <% task_id = task[:id] %>
    <% if task[:completion_date] == nil %>
      <li>
        <%= link_to task[:name], task_path(task)%>
        <%= button_to "Mark Task Complete", complete_task_path(task_id), method: "patch", data: { confirm: "Are you ready to mark this task complete?" } %>
        <em>
        <%= link_to "Delete This Task", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task from the list?"} %>
        </em>
      </li>
      <% end %>
    </li>
  <% end %>

  <li>
    <%= link_to "Add New Task", new_task_path %>
  </li>
</ul>
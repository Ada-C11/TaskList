<body>
    <main>
    <h1>Task List</h1>
    <div class="info-section">
        <h2>Your Tasks</h2>
        <ul>
        <% @tasks.each do |task| %>
            <li>
                <% if !task.completed %>
                    <section class="false-status">
                        <%= link_to task.name, task_path(task.id), class: "task-link" %>
                        Description: <%= task.description %>
                        <section class="task-links-inline">
                            <%= link_to "Edit", edit_task_path(task.id), class: "link" %>
                            <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}, class: "link" %>
                            <%= button_to "Mark complete", { action: "toggle_complete", id: task.id }, method: :patch %>
                        </section>
                    </section>
                <% else %>
                    <section class="true-status">
                        <%= link_to task.name, task_path(task.id), class: "task-link" %>
                        Description: <%= task.description %>
                        <section class="task-links-inline">
                            <%= link_to "Edit", edit_task_path(task.id), class: "link" %>
                            <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}, class: "link" %>
                            <%= button_to "Unmark complete", { action: "toggle_complete", id: task.id }, method: :patch %>
                        </section>
                    </section>
                <% end %>
            </li>
        <% end %>
        </ul>
    </div>
    <%= link_to "Add a new task", new_task_path, class: "link bottom-link" %>
    </main>
</body>
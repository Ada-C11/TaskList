<h1>Tasks</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<ul>
    <% @tasks.each do |task| %>
        <li>
            <%= link_to task.name, task_path(task.id) %>
            <%= link_to "Delete", task_path(task.id), :data => {:confirm => 'Are you sure?'}, method: :delete %>
        </li>
    <% end%>
</ul>

<%= link_to "Add a new task", new_task_path %>
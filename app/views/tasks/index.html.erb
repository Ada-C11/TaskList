<section>
  <h2>Your Tasks</h2>
  <ul>
    <% @tasks.each do |task| %>
      <li>
      <% if task.completed != nil %>
        <strong>
          <%= link_to task.name, task_path(task.id) %> - 
        </strong>
      </li>
      <li>
        <%= link_to "Mark Complete", task_path(task), method: :put, data: { confirm: "Mark #{task.name} complete?" } %>
      </li>
      <% else %>
        <strong class="completed">
          <%= link_to task.name, task_path(task.id) %> - 
        </strong>
      </li>
      <li>
        <%= link_to "Mark Uncomplete", task_path(task), method: :put, data: { confirm: "Mark #{task.name} incomplete?" } %>
      </li>
      <% end %>
      <li>
        <%= link_to "Edit", edit_task_path(task) %>
      </li>
      <li>
        <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task? " } %>
      </li>
    <% end %>
  </ul>
</section>
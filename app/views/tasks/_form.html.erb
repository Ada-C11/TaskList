<%= form_with model: @task, class: form_class do |f| %>

  <%= f.label "Edit name:"  %>
  <%= f.text_field :task %>
  <%= f.label "Edit description:" %>
  <%= f.text_field :descriptions %>
  <%= f.label "Completion status:" %>
  <%= f.text_field :completed %>

  <%= f.submit action_name, class: "form-submit-button" %>

<% end %>
<%= form_with model: @task, class: 'task-form' do |f| %>

  <div>
    <%= f.label :name, "Task's name" %>
    <%= f.text_field :name, placeholder: "A tisket, a TASKet!" %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: "Need more details, pls" %>
  </div>

  <div>
    <%= f.label :completion_date, "Due date" %>
    <%= f.text_field :completion_date, placeholder: "MM-DD-YY" %>
  </div>

  <%= f.submit "Update it!" %>

  <% end %>
<%= form_with model: @task, class: form_class do |f| %>
  
  <p><%= intro_text%></p>
  <%= f.label :name%>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_field :description %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date%>

  <%= f.submit action_name, class:"task-form_submit-btn"%>
  
<% end %>
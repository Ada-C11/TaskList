<h1><%= link_to "TaskList", tasks_path %></h1>
<h2>just get it done!</h2>

<%= form_with model: @task, class: form_class do |f| %>

<body class: body_class>
    <p><%= intro_text %></p>
    <section>
        <%= f.label :name %>:
        <%= f.text_field :name %>
        <%= f.label :description %>:
        <%= f.text_field :description %>
        <%= f.label :due_date %>:
        <%= f.text_field :completion_date %>
    </section>
    <section>
        <%= f.submit action_name, class: "task-form__submit-btn button" %>
    </section>
</body>

<% end %>
<%= form_with model: @task, class: 'edit-task' do |f| %>

  <p>Please fill out the form to create a new task</p>

  <%= f.label :name%>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :due_date %>
  <%= f.datetime_field :due_date %>

  <%= f.submit "Edit Task", class: "task-form__edit-btn" %>
<% end %>
<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Please fill out this task's information:</p>

  <div>
    <%= f.label :name, "Please enter a task name" %>
    <%= f.text_field :name, default: @task.name %>
  </div>

  <div>
    <%= f.label :description%>
    <%= f.text_field :description, default: @task.description %>
  </div>

  <%= f.submit action_name, class: "btn" %>
<% end %>
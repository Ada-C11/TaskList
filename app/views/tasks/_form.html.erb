<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Please update this task's information</p>

  <div>
    <%= f.label :name, "Task title" %>
    <%= f.text_field :name, placeholder: title %>
  </div>

  <div>
    <%= f.label :description, "Task description" %>
    <%= f.text_field :description, placeholder: description %>
  </div>

  <div>
    <%= f.label :completion_date, "Completion date" %>
    <%= f.text_field :completion_date, placeholder: completion %>
  </div>

  <%= f.submit action_name %>
<% end %>
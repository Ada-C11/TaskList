<h1><%= page_name %></h1>
<%= form_with model: @task, class: 'tasks-edit-form' do |f| %>
  <p>Please provide the following information to save your task:</p>
  <p>
    <%= f.label :name, "Task Name:" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description, "Task Description:" %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :completion, "Completion Date:" %>
    <%= f.text_field :completion %>
  </p>


  <p>
    <%= f.submit "Save Task", class: "task-button" %>
  </p>

<% end %>
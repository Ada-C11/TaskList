<link rel="stylesheet" href="../assets/stylesheets/normalize.css">

<%= form_with model: @task, class: form_class do |f| %>

  <p><%= intro_text %></p>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
  <div>
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  </div>
  <%= f.submit action_name, class: "task-form_submit-btn" %>

<% end %>
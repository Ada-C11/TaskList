<h2>Edit your task!</h2>

<%= form_with model: @task, class: 'task-form' do |f| %>

  <div>
    <%= f.label :name, "Task's name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :completion_date %>
    <%= f.text_field :completion_date %>
  </div>

  <%= f.submit "Update it!" %>

  <% end %>
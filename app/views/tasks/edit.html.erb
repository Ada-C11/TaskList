<h2>Edit Task Form</h2>

<%= form_with model: @task, class: "edit-task" do |f| %>
<p> Please fill out the task information you would like to change: </p>
  <div>
  <%= f.label "Name:" %>
  <%= f.text_field :name %>
  </div>

  <div>
  <%= f.label "To do:" %>
  <%= f.text_field :description %>
  </div>
  
  <%= f.submit "Submit Changes" %>
<% end %>
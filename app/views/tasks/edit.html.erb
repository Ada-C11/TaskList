<h1>Update your task</h1>

<%= form_with model: @task, class: "edit-task" do |f| %>

<p>Please fill out this form to update selected task</p>

  <%# These are methods to build text field and lable %>
  <%= f.label :name %>
  <%= f.text_field :name%>
 <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>

  <%= f.submit "Edit Task", class: "task-form__submit-btn" %>

<% end %>
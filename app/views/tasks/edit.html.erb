<h1>Edit Task</h1>
<%= form_with model: @task, class: 'tasks-edit-form' do |f| %>
  <p>Provide the following information to save your task:</p>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :completion_date %>
    <%= f.text_field :completion %>
  </p>
  <p>
    <%= f.submit "Save Task", class: "task-button" %>
  </p>
<% end %>

<h2>Edit Task:</h2>

<%= form_with model: @task, class: 'edit-task' do |f| %>

  <p>Fill out the form to edit a new task</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save task", class: "task-form__submit-btn" %>

<% end %>

<%= link_to "Back to All Tasks", tasks_path %>
<h2>Form for editing a new Task</h2>


<%= form_with model: @task, class: 'edit-task' do |f| %>
  
  <p>Edit your task here.</p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_field :description %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date%>

  <%= f.submit "Edit Task", class:"task-form_submit-btn"%>
  
<% end %>
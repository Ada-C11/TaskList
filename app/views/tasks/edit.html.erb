<%= form_with model: @task, class: "form_edit" do |f| %>
    <p>Edit the task here:</p>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :completion_date %>
    <%= f.text_field :completion_date %>
    <%= f.label :status %>
    <%= f.text_field :status %>

    <%= f.submit "Save Task", class: "submit-btn" %>
<% end%>
<h2>Edit existing task</h2>

<%= form_with model: @task, class: "edit-task" do |f| %>

  <p>Please update the fields below:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Save Task", class: "task-form_submit-btn" %>

<% end %>

<%= link_to "Back to task list", tasks_path %>
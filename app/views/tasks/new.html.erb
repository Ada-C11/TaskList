<h1>Create a New Task</h1>
<ul class="list-group d-flex justify-content-between">
<%= form_for @task do |form| %>
  <li><%= form.label "Title:" %></li>
  <li><%= form.text_field :title %></li></br>
  <li><%= form.label "Description:" %></li>
  <li><%= form.text_area :description %></li></br>
  <li><%= form.submit "Create" %></li>
<% end %></ul>
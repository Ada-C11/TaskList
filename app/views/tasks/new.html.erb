
<h2>Create a new Task!</h2>


<%= form_with model: @task, class: 'create-task' do |f| %>

  <p>Fill in the information below to create a new task</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save Task", class: "task-submit-button" %>

<% end %>
<h2>New Task Form</h2>

<%= form_with model: @task, class: 'task-form' do |f|%>
    <p>Please fill out this task's information</p>
    
    <div>
        <%= f.label :name, "Please enter the new task" %>
        <%= f.text_field :name, placeholder: "A New Task" %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_field :description, placeholder: "Task Description"%>
    </div>

    <%= f.submit "Submit" %>

<% end %>
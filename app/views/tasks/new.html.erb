<h2>Form for creating a new Task</h2>


<%= form_with model: @task, class: 'create-task' do |f| %>
  
  <p>Create your new task here.</p>
  <%= f.label :name%>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_field :description %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date%>

  <%= f.submit "Save Task", class:"task-form_submit-btn"%>
  
<% end %>
<h2>Form for creating a new task </h2>

<%= form_with model: @task, class: 'create-task' do |f| %>

  <p>Please fill out the form to create a new task</p>

  <%= f.label :name %>
  <%= f.text_field :name  %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :due_date %>
  <%= f.datetime_field :due_date %>

  <%= f.submit "Save Task", class: "task-form__submit-btn" %>


<% end %>
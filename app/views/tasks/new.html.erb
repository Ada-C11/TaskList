<h2>Create a new task:</h2>

<%= form_with model:@task, class: "create-task" do |f| %>

  <p>Please fill out the fields below:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>

  <%= f.submit "Save Task", class: "task-form_submit-btn" %>

<% end %>

<%= link_to "Back to task list", tasks_path %>
<h3>Fill in the info to create a new task</h3>
<%= form_with model: @task, class: 'create-task' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :completion_date %>
    <%= f.text_field :completion_date %>
    <%= f.label :status %>
    <%= f.text_field :status %>

    <%= f.submit "Save Task", class: "submit-btn"%>
<% end %>


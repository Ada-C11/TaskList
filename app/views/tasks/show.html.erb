<div class = "main">
<h2> Task: <%= @task.name %></h2>
<p class="show"> <strong>Description:</strong> <%= @task.description %> </p>
<p><strong>Completed?</strong> <%= @task.completed %></p>
<% if @task.completed == true %>
    <p> <strong>Completion Date:</strong> <%=@task.completion_date.localtime.to_date %></p>
<% end %>

<%= link_to "Edit Task", edit_task_path(@task.id) %>
</div>
<h2>
  <%= @task.name %>
</h2>

<h3>
  Description: <%= @task.description %>
</h3>

<% if !@task.completed %>
    <%= button_to "Mark complete", { action: "toggle_complete", id: @task.id }, method: :patch %>
<% else %>
    <%= button_to "Unmark complete", { action: "toggle_complete", id: @task.id }, method: :patch %>
<% end %>

<%= link_to "Edit this task", edit_task_path, class: "link" %>

<%= link_to 'Delete this task', task_path(@task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}, class: "link" %>

<%= link_to "Back to All Tasks", tasks_path, class: "link" %>

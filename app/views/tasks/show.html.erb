<h2>
    Task: <%= @task.name %>
</h2>

<p>
    <%= flash[:success] if flash[:success] %>
    <%= flash[:error] if flash[:error] %>
</p>

<ul>
    <li>Description: <%= @task.description%></li>
    <li>Status: <%= @task.status %></li> 
    <li>Completion Date: <%= @task.completion_date %></li> 
</ul>

<%= link_to "Back to all tasks", tasks_path %>
<%= link_to "Edit this task", edit_task_path(@task.id) %>

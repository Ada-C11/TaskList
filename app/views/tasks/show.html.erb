<link rel="stylesheet" href="../assets/stylesheets/normalize.css">

<h2>
  <%= @task.name %>
</h2>

<p>
  <%= @task.description %>
</p>

<p>
  <% if !@task.due_date.nil? %>
    <%= @task.due_date.in_time_zone("Pacific Time (US & Canada)") %>
  <% end %>
</p>

<p>
  <% if !@task.completed_date.nil? %>
    <%= @task.completed_date.in_time_zone("Pacific Time (US & Canada)") %>
  <% end %>
</p>

<p>
  <%= @task.completed %>
</p>

<%= link_to "Edit", edit_task_path(@task.id) %>
<%= link_to "Delete", task_path(@task.id), method: :delete %>

<%= link_to "Back to task list", tasks_path %>
<h2>Add A New Task</h2>


<%= form_with model: @todo, class: 'create-task' do |f| %>

  <p>Fill out the form to create a new task</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :completion_date %>
  <%= f.text_field :completion_date %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save task", class: "task-form__submit-btn" %>

<% end %>

<%= link_to "Back to All Tasks", todos_path %>

<%= render partial: "form", locals: {
  form_class: "new-book",
  intro_text: "Use this form to create a new book",
  action_name: "MAKE! THAT! BOOK!"
} %>
<!DOCTYPE html>
<html>
  <head>
    <title>TaskList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      @import url('https://fonts.googleapis.com/css?family=Caudex:400, 400i')
    </style>
  </head>

  <body>
    <div class="aside">
      <nav>
        <ul>
          <li><%= link_to "Add a task", new_task_path %></li>
          <li><%= link_to "All tasks", tasks_path %></li>
        </ul>
      </nav>
    </div>
    
    <header>
      <h1>Tasks</h1>
    </header>
  
  
    <main>
      <%= yield %>
    </main>
  </body>
</html>
